
<section class="commentshow-container">
  <section class="comment-left">
    <img src="<%= comment.get('user_avatar') %>"></img>
    <article class="comment-author">
      <%= comment.escape('author') %>
    </article>
    <br>
    <article class="comment-body">
      <%= comment.escape('body') %>
    </article>
  </section>

  <section class="comment-right">
    <article class="comment-timeago">
      <%= $.timeago(comment.get('created_at')) %>
    </article>
    <br>
    <div class="buttons">
    <% if (user.id === comment.get('user_id')) { %>
      <button class="btn btn-default btn-xs delete">
        <span class="glyphicon glyphicon-trash"></span>
      </button>
      <% } %>
      <button class="btn btn-default btn-xs reply">Reply</button>
    </div>
  </section>
</section>

<section class="reply-container">


</section>



<div class="reply-row">
  <div class="reply-container">
    <div class="input-group input-group-sm">
      <label class="sr-only" for="reply-field">Comment Field</label>
      <div class="input-group-addon"
        style="background-image: url('<%= user.escape('avatar_url') %>')"></div>
      <form>
        <input type="text" name="body" class="form-control" id="reply-field"
        placeholder="Write a reply ...">
        <button type="submit" style="display: none;">
        </form>
      </div>
  </div>
</div>
