<header style="background-image: url(<%= demo.escape('thumb_url') %>)">
  <div class="bg artist">
    <h4><%= demo.escape('artist_name') %></h4>
  </div>

  <div class="bg title">
    <button id="show-play-btn" class="btn btn-primary">
      <span id="play<%= demo.id %>" class="glyphicon"></span>
    </button>
      <h1><%= demo.escape('title') %></h1>
  </div>

</header>
<div class="demo-show-comment-form">
  <div class="comment-container">
    <div class="input-group input-group">
      <label class="sr-only" for="comment-field">Comment Field</label>
      <div class="input-group-addon"
        style="background-image: url('<%= user.escape('avatar_url') %>')"></div>
      <form class="meme">
        <input type="text" name="body" class="form-control" id="comment-field"
          placeholder="Write a comment ...">
        <button type="submit" style="display: none;">
      </form>
    </div>
  </div>
</div>
