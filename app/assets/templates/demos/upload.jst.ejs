<form class="form-group " action="/demos" method="POST">
  <div class="upload-form">

    <h3>Upload to Demogogue</h3>
    <div class="upload-form-form">
      <div class="form-group">
        <input class="form-control" type="file" id="file-chooser" />
      </div>
      <button id="upload-button" class="btn btn-primary">Upload Audio</button>
    </div>
  </div>

  <div class="progress" style="">
    <div class="progress-bar" role="progressbar" aria-valuenow="0"
      aria-valuemin="0" aria-valuemax="100" style="width:0%;">
    </div>
  </div>

  <div class="demo-form">
    <div class="demo-image-container">
      <div class="demo-form-track-image"
           style="background-image: url('<%= demo.escape('thumb_url') %>')">
        <button type="button"
        class="btn btn-success"
        data-toggle="modal" data-target="#image-modal">
        Change Image
      </button>
      </div>
    </div>

    <div class="demo-form-info">
      <div class="form-group">
        <label for="demoTitle">Track Title</label>
        <input type="text" class="form-control" id="demoTitle"
          placeholder="Enter title">
      </div>

      <div class="form-group">
        <label for="demoInfo">Track Info</label>
        <textarea id="demoInfo" class="form-control" rows="3"
          placeholder="Musicians, engineers, dedications..."></textarea>
      </div>

      <div class="form-group">
        <label for="demoGenre">Genre</label>
        <select id="demoGenre" class="form-control">
          <% _.each(Demogogue.Models.Demo.GENRES, function(string) { %>
            <option><%= string %></option>
          <% }); %>
        </select>

        <button id="save-btn" type="button" class="btn btn-primary" disabled>
          Save Demo
        </button>
      </div>
    </div>
  </div>
</form>



<div class="modal fade" id="image-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
  <div style="margin-top: 100px;" class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Change Demo Artwork</h4>
      </div>
      <div class="modal-body">
        <!-- IMAGE FORM -->
        <div class="demo-image-container">
          <div class="demo-form-track-image temp"
          style="background-image: url('<%= demo.escape('thumb_url') %>')"></div>
        </div>
        <div class="image-form-container">
          <div class="image-form-menu">
            <ul class="nav nav-tabs">
              <li id="image-form-link" role="presentation" class="active">
                <a href="javascript:void(0)">Link an image</a>
                </li>
              <li id="image-form-upload" role="presentation">
                <a href="javascript:void(0)">Upload a file</a>
                </li>
            </ul>
          </div>

          <form id="update-image-form">
            <div class="image-form-link">
              <form class="form-group">
                <label for="image-link-field">Image Url</label>
                <input name="img-url"
                  id="image-link-field"
                  value="<%= demo.escape('thumb_url')%>"
                  type="text" class="form-control">
            </div>
            <div class="image-form-file">
              <label for="image-upload-field">Upload an image</label>
              <input class="form-control" type="file" id="img-file-chooser"/>
            </div>
          </form>

        </div>
      </div>
      <div class="modal-footer">
        <button form="update-image-form"
            type="submit"
            data-dismiss="modal"
            class="btn btn-primary update-image">Update</button>
        <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
